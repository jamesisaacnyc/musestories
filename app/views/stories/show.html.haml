#story_show.row
	.col-md-8.col-md-offset-2
		.panel.panel-default
			.panel-heading.story_image
				= image_tag @story.image.url(:large)
			.panel-body	
				%h1= @story.title
				%p.description= @story.description 
			.panel-footer
				.row
					.col-md-6
						%p.user
						Shared by:
						= link_to @story.user.email, user_path
						%h4= @story.location
					.col-md-6
						.btn-group.pull-right	
							= link_to like_story_path(@story), method: :put, class: "btn btn-default" do 
								%span.glyphicon.glyphicon-heart
									=@story.get_upvotes.size
							- if user_signed_in?
								= link_to "Edit", edit_story_path, class: "btn btn-default"
								= link_to "Delete", story_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"